#!/bin/bash

echo "### Void linux"
doas xbps-install -Su

echo "### Rust toolchain"
rustup self update

echo "### Rustup tooling"
rustup update

echo "### Cargo packages"
cargo install-update --all --locked

echo '### Node update with fnm (manually change on major)'
fnm install 22
fnm default 22
fnm use 22

echo '### PNPM update'
pnpm self-update

echo "### Bun update"
bun upgrade

echo "### Deno update"
deno upgrade

echo "### Flatpaks update"
flatpak update
