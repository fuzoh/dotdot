#!/bin/bash

echo "### Void linux"
doas xbps-install -Su

echo "### Rust toolchain"
rustup self update

echo "### Rustup tooling"
rustup update

echo "### Cargo packages"
cargo install-update --all --locked

echo '### Node update with fnm (manually change on major)'
fnm install 24
fnm default 24
fnm use 24

echo '### PNPM update'
pnpm self-update

echo "### Bun update"
bun upgrade

echo "### Deno update"
deno upgrade

echo "### Uv update"
uv self update

echo "### Flatpaks update"
flatpak update
